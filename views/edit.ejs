<%- include('partials/header.ejs') %>

<section class="container cat-theme">
  <form action="/save" method="POST" class="cat-form">
    <div class="form-group">
      <% if (newPost==="true") { %>
        <label for="title">Title:</label>
        <input name="title" type="text" placeholder="Blog Title" required class="form-control">
        <br>
        <label for="author">Author:</label>
        <input name="author" type="text" placeholder="John Smith" required class="form-control">
      <% } else { %>
        <p><strong>Title:</strong> <%= post.title %></p>
        <p><strong>Author:</strong> <%= post.author %></p>
      <% }; %>
    </div>

    <div class="form-group">
      <% if (newPost==="true") { %>
        <br>
        <label for="content">Content:</label>
        <textarea id="content" name="content" required class="form-control" placeholder="Blog content here..."></textarea>
        <input type="hidden" id="postId" name="postId" value="new">
      <% } else { %>
        <label for="content"><strong>Content:</strong></label>
        <textarea id="content" name="content" required class="form-control"><%= post.content %></textarea>
        <input type="hidden" id="postId" name="postId" value=<%= post.id %>>
      <% }; %>
    </div>
    <input type="submit" class="btn btn-primary cat-btn btn-custom" value="Save">
    <% if (newPost==="true") { %>
      <button type="button" class="btn btn-secondary cat-btn btn-custom" onclick="window.location.href='/'">Cancel</button>
    <% } else { %>
      <form action="/view" method="POST" class="cat-form-inline">
        <input type="submit" class="btn btn-secondary cat-btn btn-custom" value="Cancel" />
      </form>
    <% }; %>
  </form>
</section>

<%- include('partials/footer.ejs') %>